                    <span class="icon is-small is-left">
                        <i class="fa fa-search"></i>
                    </span>                    
                    <%= text_field_tag 'q', '', class: "input", placeholder:"Ingresa tú búsqueda" %>
                </div>
                <div class="control">
                    <button class="button is-primary" type="submit">Buscar</button>
