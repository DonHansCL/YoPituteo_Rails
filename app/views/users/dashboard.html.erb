<% content_for :head do %>
    <meta name="turbolinks-cache-control" content="no-cache">
<% end %>



<section class="section">
    <div class="container">
        <div class="columns">
        


            <!-- LEFT SIDE -->
            <div class="column is-one-third">
                <div class="columns is-multiline">

                    <!-- Top Card -->
                    <div class="column is-full">
                        <div class="card">

                            <!-- Avatar -->
                            <div class="card-content is-horizontal-center is-flex">
                                <figure class="image is-128x128">
                                    <%= image_tag avatar_url(current_user), class: "is-rounded" %>
                                </figure>
                            </div>
                            
                            <div class="card-content">

                                <!-- Upload Button -->
                                <div class="content has-text-centered">
                                    <p class="title is-5"><%= current_user.nombre %></p>

                                    <%= form_for :user, url: users_edit_url(@user), action: :update, method: :post do |f| %>
                                        <div class="file">
                                            <label class="button is-primary is-outlined is-fullwidth">
                                                <%= f.file_field :avatar, class: "file-input", onchange: "this.form.submit()" %>
                                                <i class="fas fa-upload"></i> &nbsp;&nbsp; Subir Avatar
                                            </label>
                                        </div>
                                    <% end %>
                                </div>
                                <hr class="n-10">
                                
                                <!-- Member -->
                                <article class="media">
                                <div class="media-content">Miembro desde:</div>    
                                <div class="media-right">
                                    <strong><%= current_user.created_at.strftime('%b %Y') %></strong>
                                </div>
                                </article>
                                <hr class="h-10">
                                
                                <!-- From -->
                                <article>
                                    <div class="media">
                                        <div class="media-content">De:</div>
                                            <div class="media-right">
                                                 <strong><%= current_user.ciudad %></strong> <i class="toggle far fa-edit" aria-controls="user-from"></i>
                                        </div>
                                    </div>

                                    <div class="content">
                                        <%= form_for :user, url: users_edit_url(@user), action: :update, method: :post, html: {id: 'user-from', class: 'is-hidden'} do |f| %>
                                        <div class="field">
                                            <%= f.text_field :ciudad, autofocus: true, autocomplete: 'form', class: 'input' %>
                                        </div>
                                        <a class="toggle button is-light" aria-controls="user-from">Cancelar</a>
                                        <%= f.submit "Guardar", class: "button is-danger"%>
                                        <% end %>
                                    </div>



                                </article>                                
                                <hr class="h-10">

                                <!-- Online Status -->
                                <article>
                                     <div class="media">
                                        <div class="media-content">Estado de conexión</div>
                                            <div class="media-right">
                                                 <strong><% if current_user.status %> Online <% else %> Offline <% end %></strong><i class="toggle far fa-edit" aria-controls="user-status"></i>
                                        </div>
                                    </div>

                                    <div class="content">
                                        <%= form_for :user, url: users_edit_url(@user), action: :update, method: :post, html: {id: 'user-status', class: 'is-hidden'} do |f| %>
                                        <div class="field">
                                            <%= f.select(:status, options_for_select([["Online", true], ["Offline", false]]), {}, {class: "select is-fullwidth"}) %>
                                        </div>
                                        <a class="toggle button is-light" aria-controls="user-status">Cancelar</a>
                                        <%= f.submit "Guardar", class: "button is-danger"%>
                                        <% end %>
                                    </div>

                                </article>

                            </div>
                        </div>
                    </div>

                    <!-- Bottom Card -->
                    <div class="column is-full">
                        <div class="card">
                            <div class="card-content">

                                <!-- About -->
                                <article>
                                     <div class="media">
                                        <div class="media-content">
                                           <p>
                                            <strong>Acerca de ti</strong>
                                            <br>
                                            <%= current_user.about %>
                                           </p>
                                        </div>
                                    
                                    <div class="media-right">
                                               <i class="toggle far fa-edit" aria-controls="user-about"></i>
                                    </div>
                                  </div>
                                    <div class="content">
                                        <%= form_for :user, url: users_edit_url(@user), action: :update, method: :post, html: {id: 'user-about', class: 'is-hidden'} do |f| %>
                                        <div class="field">
                                            <%= f.text_area :about, autofocus: true, autocomplete: 'form', class: 'input' %>
                                        </div>
                                        <a class="toggle button is-light" aria-controls="user-about">Cancelar</a>
                                        <%= f.submit "Guardar", class: "button is-danger"%>
                                        <% end %>
                                    </div>
                                </article>
                                <hr class="h-10">

                                <!-- Languages -->
                                <article>
                                  <div class="media">
                                        <div class="media-content">
                                           <p>
                                            <strong>Idioma</strong>
                                            <br>
                                            <%= current_user.language %>
                                           </p>
                                        </div>
                                    
                                    <div class="media-right">
                                               <i class="toggle far fa-edit" aria-controls="user-language"></i>
                                    </div>
                                </div>

                                    <div class="content">
                                        <%= form_for :user, url: users_edit_url(@user), action: :update, method: :post, html: {id: 'user-language', class: 'is-hidden'} do |f| %>
                                        <div class="field">
                                            <%= f.text_field :language, autofocus: true, autocomplete: 'form', class: 'input' %>
                                        </div>
                                        <a class="toggle button is-light" aria-controls="user-language">Cancelar</a>
                                        <%= f.submit "Guardar", class: "button is-danger"%>
                                        <% end %>
                                    </div>
                                </article>
                                <hr class="h-10">
                                
                                <!-- Linked Account -->
                                <article class="media">
                                    <div class="content">
                                        <p>
                                            <strong>Vincula con Facebook</strong><br/>
                                            <% if current_user.provider%>
                                                <span class="has-text-success">Facebook verificado</span>
                                            <% else%>
                                                <%= link_to 'Conectate con Facebook', user_facebook_omniauth_authorize_path, class:"has-text-danger" %>
                                            <% end %>
                                        </p>
                                    </div>
                                </article>

                            </div>
                        </div>
                    </div>

                </div>
            </div>

            <!-- RIGHT SIDE -->
            <div class="column">
                <div class="columns is-multiline">

                    <!-- Create New Gig -->
<div class="column is-one-third has-text-centered">
    <%= link_to new_gig_path do %>
        <div class="card">

            <div class="card-image card-content is-horizontal-center is-flex ">
                <figure class="image is-128x128 ">
                    <!-- Plus Icon Here -->
                    <%= image_tag 'icon_add.png' %>
                </figure>
            </div>

            <div class="card-content">
                <strong>Create a new gig</strong>
            </div>    

        </div>
    <% end %>    
</div>


<!-- Sample Gig -->
<% current_user.gigs.each do |gig| %>

<div class="column is-one-third">
    <div class="card">
        <div class="card-image">
            <%= link_to edit_gig_path(gig) do %>

                <figure class="image is-4by3">
                    <!-- Gig Cover Image Here -->
                    <%= image_tag gig_cover(gig) %>
                </figure>
            <% end %>
        </div>

        <div class="card-content p-t-5 p-b-5">
            <p class="subtitle is-6 m-b-5"><%= link_to gig.title.truncate(28), gig_path(gig)%></p>
            <span class="star-review"><i class="fa fa-star"></i>
                <%= gig.average_rating %>
                 <span class="has-text-primary">(<%= gig.reviews.count %>)</span>
            </span>                                        
        </div>

        <footer class="card-footer">
            <% basic_price = gig.pricings.find{ |p| p.pricing_type == 'basic' } %>
            <a class="has-text-danger is-block card-footer-item has-text-right">
                <% if !basic_price.nil? %>
                    <span class="small-title">DESDE</span> 
                    <strong>$<%= basic_price.price %></strong>   
                <% else %>
                    <strong>
                        <span class="small-title has-text-dark">SIN PRECIO</span>
                    </strong>
                <% end %>                                         
            </a>
        </footer>  

    </div>
</div>
<% end %>  

        </div>
    </div>
</section>

<script>
    $(document).ready(() => {    //=aqui probe $(document).on('turbolinks:load',() => {    / .on('turbolinks:load', function()   /       document.addEventListener("turbolinks:load", function() {           /$(document).on('ready turbolinks:load', function() {     /pero no funcionó
    $('.toggle').on('click', (e) => {
        e.stopPropagation();
        e.preventDefault();
        $('#' + e.target.getAttribute('aria-controls')).toggleClass('is-hidden');
    })
})
</script>