            <%= f.text_area :title, autocomplete: "title", class: "textarea" %>
    </div>
        <div class="field">
            <label class="label">Provincia</label>
            
            <%= f.select(:province_id, options_for_select(@provinces.map{ |c| [c.nombre, c.id] },class: "is-primary", selected: @gig.province_id) ) %>
